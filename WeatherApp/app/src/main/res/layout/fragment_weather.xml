
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar">
        </include>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar">


            <TextView
                android:id="@+id/cityText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:textSize="30sp"
                tools:text="Istanbul" />

            <ImageView
                android:id="@+id/tempIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_baseline_search_24" />

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5°"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:paddingLeft="15dp"
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="52dp"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
            <TextView
                android:id="@+id/nextDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="Friday" />
            <TextView
                android:id="@+id/nextDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="Saturday" />
            <TextView
                android:id="@+id/nextDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="Sunday" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"

            android:showDividers="middle"
            android:gravity="end"
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/nextDay1Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_baseline_search_24" />
            <TextView
                android:id="@+id/nextDay1Day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5°"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:textColor="#808080"

                android:id="@+id/nextDay1Nigth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5°"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"

            android:showDividers="middle"
            android:gravity="end"
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <ImageView
                android:id="@+id/nextDay2Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_baseline_search_24" />
            <TextView
                android:id="@+id/nextDay2Day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="5°"
                android:textSize="24sp"  />
            <TextView
                android:textColor="#808080"

                android:id="@+id/nextDay2Nigth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5°"
                android:textSize="24dp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"
            android:showDividers="middle"
            android:gravity="end"
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
            <ImageView
                android:id="@+id/nextDay3Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_baseline_search_24" />
            <TextView
                android:id="@+id/nextDay3Day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="5°"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/nextDay3Nigth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#808080"
                android:text="5°"
                android:textSize="24dp"  />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080" />
        </LinearLayout>
        <LinearLayout
android:id="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
